{
  "compilerOptions": {
    "plugins": [
      {
        "name": "ts-lit-plugin"
      }
    ],
    "lib": ["es2021", "dom"],
    "target": "es2021",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
}
